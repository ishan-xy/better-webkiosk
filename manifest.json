{
  "manifest_version": 3,
  "name": "BetterWebKiosk (TIET)",
  "version": "1.0",
  "description": "Secure auto-login for Thapar WebKiosk with encrypted credential storage and a local subject-wise marks summary.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://webkiosk.thapar.edu/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Thapar WebKiosk â€” Setup"
  },
  "content_scripts": [
    {
      "matches": ["https://webkiosk.thapar.edu/*"],
      "js": ["crypto.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
